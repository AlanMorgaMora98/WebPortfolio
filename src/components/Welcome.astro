<style>

	html {
		scroll-behavior: smooth;
	}

	:root {
		--space: 1rem;
		--bg: #09090b;
		--fg: #e3e3e3;
		--surface-1: #101012;
		--surface-2: #27272a;
		--surface-3: #52525b;
		--ease-out: cubic-bezier(0.5, 1, 0.89, 1);
		--ease-in-out: cubic-bezier(0.45, 0, 0.55, 1);
		--primary-color: #5ad689;
		--secondary-color: #531b79;
		--accent-color: #770d0d;
		--text-color: #d4e5e1;
		--background-color: #1b1b1d;
		--header-gradient: linear-gradient(180deg,rgba(90, 214, 137, 1) 0%, rgba(25, 102, 55, 1) 80%, rgba(255, 255, 255, 0) 100%);
		--font-title: "Bungee Hairline", sans-serif;
		--font-text: "Space Mono", sans-serif;
		--font-dot: "Doto", sans-serif;
	}

	*::selection {
		background-color: var(--secondary-color); /* Color de fondo cuando seleccionas */
		color: var(--text-color); /* Color del texto cuando seleccionas */
	}

	body {
		background-color: var(--background-color);
	}

	h1, h2, h3, h4 {
		font-family: var(--font-title)
	}

	a {
		font-family: var(--font-title);
		text-decoration: none;
		font-weight: 900;
	}

	p {
		font-family: var(--font-text);
	}

	code {
		font-family: var(--font-dot);
	}

	#container {
		height: 100%;
	}

	header {
		display: flex;
		flex-flow: row wrap;
		position: sticky;
		top: 0px;
		justify-content: space-between;
		align-items: center;
		height: 6vh;
		background-color: var(--primary-color);
		/* background: linear-gradient(180deg,rgba(90, 214, 137, 1) 0%, rgba(25, 102, 55, 1) 85%, rgba(255, 255, 255, 0) 100%); */
		/* background: linear-gradient(180deg,rgba(90, 214, 137, 1) 0%, rgba(90, 214, 137, 0.9) 75%, rgba(90, 214, 137, 0.1) 90%, rgba(90, 214, 137, 0)); */
		color: var(--accent-color);
	}

	.refs, .links {
