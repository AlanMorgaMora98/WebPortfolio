		flex-flow: row wrap;
		justify-content: center;
		align-items: center;
		height: 6vh;
		margin-left: 2%;
		margin-right: 2%;
		color:#770d0d;
	}

	.refs a {
		margin-left: 10px;
		margin-right: 10px;
		padding: 8px;
		box-sizing: border-box;
	}

	.refs a:hover {
		background-color: #301472;
		color: #770d0d;
	}

	.links a {
		margin-left: 20px;
		margin-right: 20px;
		padding: 8px;
		box-sizing: border-box;
		/* background-color: #101012; */
	}

	.links a:hover {
		background-color: #5e6a1e;
		color: red;
	}

	.icon {
		width: 1.5rem;
		height: 1.5rem;
		color: var(--secondary-color); /* Cambia el color del SVG */
	}

	.icon:hover {
		width: 1.5rem;
		height: 1.5rem;
		color: var(--accent-color);
		/* color: linear-gradient(to right, var(--primary-color), var(--secondary-color), var(--primary-color)); */
		
	}

	.description {
		width: 50vw;
		color: var(--text-color);
		font-family: var(--font-text);
	}

	main {
		height: 100%;
		width: 100%;
		justify-content: center;
	}

	#hero {
		display: flex;
		align-items: start;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
	}

	#hero h1 {
		color: var(--primary-color);
		font-size: 40px;
		background: linear-gradient(to right, var(--primary-color), var(--secondary-color), var(--primary-color));
		background-size: 200%;
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: animate-gradient 5s linear infinite;
	}

	@keyframes animate-gradient {
		to {
			background-position: 200%;
		}
	}

	.custom-card {
		width: 300px;
		height: 455px;
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 0 36px;
		perspective: 2500px;
		cursor: pointer;
		border-radius: 30px;
	}

	.cover-image {
		width: 100%;
		height:  100%;
		border-radius: 30px;
		object-fit: cover;
	}

	.wrapper {
		transition: all 0.5s;
		position: absolute;
		width: 100%;
		z-index: -1;
		background: #000;
		border-radius: 30px;
		box-shadow: rgba(49, 210, 12, 0.25) 0px 14px 28px, rgba(85, 29, 148, 0.22) 0px 10px 10px;

	}

	.wrapeer img {
		border-radius: 30px;
		box-shadow: rgba(255, 68, 0, 0.25) 0px 14px 28px, rgba(0, 0, 0, 0.22) 0px 10px 10px;
	}

	.custom-card:hover .wrapeer {
		transform: perspective(900px) translateY(-5%) rotateX(90deg) translateZ(0);
		box-shadow: 2px 35px 32px -8px rgba(0, 0, 0, 0.75);
		-webkit-box-shadow: 2px 35px 32px -8px rgba(0, 0, 0, 0.75);
		-moz-box-shadow: 2px 35px 32px -8px rgba(0, 0, 0, 0.75);
	}

	.wrapeer::before,
	.wrapeer::after {
		content: "";
		opacity: 0;
		width: 100%;
		height: 80px;
		transition: all 0.5s;
		border-radius: 30px;
		left: 0;
		box-shadow: rgba(0, 0, 0, 0.25) 0px 14px 28px, rgba(0, 0, 0, 0.22) 0px 10px 10px;
	}

	.wrapeer::before {
		top: 0;
		height: 100%;
		background-image: linear-gradient(to top, transparent 46%, rgba(12, 13, 19, 0.5) 68%, rgba(12, 12, 19) 97%);
	}

	.wrapeer::after {
		bottom: 0;
		opacity: 1;
		background-image: linear-gradient(to top, transparent 46%, rgba(12, 13, 19, 0.5) 68%, rgba(12, 12, 19) 97%);
	}

	.custom-card:hover .wrapeer::before, .wrapeer::after {
		opacity: 1;
	}

	.custom-card:hover .wrapeer::after {
		height: 120px;
	}

	.custom-card:hover .cover-image {
		opacity: 0.5; 
	}

	.character {
		width: 50%;
		opacity: 1;
		transition: all 0.5s;
		position: absolute;
		filter: drop-shadow(2px 2px 2px #c01515);
		z-index: -1;
	}

	.custom-card:hover .character {
		opacity: 1;
		transform: translate3d(0%, -20%, 670px);
	}

	.test3D {
